<Window x:Class="WpfApplicationTM_01.WindowPlot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="WindowPlot" Height="352" Width="542">
    <Grid>
        <d3:ChartPlotter Name="plotter" Margin="10,10,20,10">
            <d3:ChartPlotter.HorizontalAxis>
                <d3:HorizontalDateTimeAxis Name="xDataAxis"/>
            </d3:ChartPlotter.HorizontalAxis>
            <d3:ChartPlotter.VerticalAxis>
                <d3:VerticalIntegerAxis Name="yDataAxis"/>
            </d3:ChartPlotter.VerticalAxis>

            <d3:Header FontFamily="Arial" Content="Result Info"/>
            <d3:VerticalAxisTitle FontFamily="Arial" Content="yData"/>
            <d3:HorizontalAxisTitle FontFamily="Arial" Content="xData"/>
        </d3:ChartPlotter>
    </Grid>
</Window>
